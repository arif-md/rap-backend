# Maven wrapper must use LF (Unix line endings)
/mvnw text eol=lf

# Windows batch files use CRLF
*.cmd text eol=crlf

# Shell scripts MUST use LF (required for Linux containers)
*.sh text eol=lf

# SQL scripts use LF (for consistency in containers)
*.sql text eol=lf

# Docker-related files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

# Standard text files
*.md text
*.txt text
*.json text
*.xml text
*.yaml text
*.yml text
*.properties text

# Java source files
*.java text diff=java
*.kt text diff=kotlin
*.gradle text diff=java
