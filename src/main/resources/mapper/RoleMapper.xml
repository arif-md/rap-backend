<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="x.y.z.backend.repository.mapper.RoleMapper">

    <!-- Result Map for Role -->
    <resultMap id="RoleResultMap" type="x.y.z.backend.domain.model.Role">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- Insert Role -->
    <insert id="insert" parameterType="x.y.z.backend.domain.model.Role">
        INSERT INTO roles (
            id,
            role_name,
            description,
            created_at
        ) VALUES (
            NEWID(),
            #{roleName},
            #{description},
            GETUTCDATE()
        )
    </insert>

    <!-- Update Role -->
    <update id="update" parameterType="x.y.z.backend.domain.model.Role">
        UPDATE roles
        SET role_name = #{roleName},
            description = #{description}
        WHERE id = #{id}
    </update>

    <!-- Find Role by ID -->
    <select id="findById" resultMap="RoleResultMap">
        SELECT * FROM roles
        WHERE id = #{id}
    </select>

    <!-- Find Role by Name -->
    <select id="findByName" resultMap="RoleResultMap">
        SELECT * FROM roles
        WHERE role_name = #{roleName}
    </select>

    <!-- Find All Roles -->
    <select id="findAll" resultMap="RoleResultMap">
        SELECT * FROM roles
        ORDER BY role_name
    </select>

    <!-- Find Roles by User ID -->
    <select id="findByUserId" resultMap="RoleResultMap">
        SELECT r.*
        FROM roles r
        INNER JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
        ORDER BY r.role_name
    </select>

    <!-- Delete Role by ID -->
    <delete id="deleteById">
        DELETE FROM roles
        WHERE id = #{id}
    </delete>

</mapper>
