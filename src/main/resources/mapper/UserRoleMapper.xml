<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="x.y.z.backend.repository.mapper.UserRoleMapper">

    <!-- Result Map for UserRole -->
    <resultMap id="UserRoleResultMap" type="x.y.z.backend.domain.model.UserRole">
        <id property="id" column="id" javaType="java.lang.Long"/>
        <result property="userId" column="user_id" javaType="java.lang.Long"/>
        <result property="roleId" column="role_id" javaType="java.lang.Long"/>
        <result property="grantedAt" column="granted_at"/>
        <result property="grantedBy" column="granted_by"/>
    </resultMap>

    <!-- Insert UserRole -->
    <insert id="insert" parameterType="x.y.z.backend.domain.model.UserRole" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO RAP.user_roles (
            user_id,
            role_id,
            granted_at,
            granted_by
        ) VALUES (
            #{userId},
            #{roleId},
            GETUTCDATE(),
            #{grantedBy}
        )
    </insert>

    <!-- Find UserRole by ID -->
    <select id="findById" resultMap="UserRoleResultMap">
        SELECT * FROM RAP.user_roles
        WHERE id = #{id}
    </select>

    <!-- Find UserRoles by User ID -->
    <select id="findByUserId" resultMap="UserRoleResultMap">
        SELECT * FROM RAP.user_roles
        WHERE user_id = #{userId}
        ORDER BY granted_at DESC
    </select>

    <!-- Find UserRoles by Role ID -->
    <select id="findByRoleId" resultMap="UserRoleResultMap">
        SELECT * FROM RAP.user_roles
        WHERE role_id = #{roleId}
        ORDER BY granted_at DESC
    </select>

    <!-- Check if User has Role -->
    <select id="hasRole" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN 1 ELSE 0 END
        FROM RAP.user_roles
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </select>

    <!-- Delete UserRole -->
    <delete id="delete">
        DELETE FROM RAP.user_roles
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

    <!-- Delete by User ID -->
    <delete id="deleteByUserId">
        DELETE FROM RAP.user_roles
        WHERE user_id = #{userId}
    </delete>

    <!-- Delete by Role ID -->
    <delete id="deleteByRoleId">
        DELETE FROM RAP.user_roles
        WHERE role_id = #{roleId}
    </delete>

</mapper>
